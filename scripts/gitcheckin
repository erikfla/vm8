#!/bin/bash

# === vm8 Git Check-in Script ===
# Dato-basert innsjekk for oversikt og ro i sjelen

DATE=$(date +"%Y-%m-%d %H:%M")
MESSAGE=${1:-"Oppdatering per $DATE"}

echo "📦 Legger til alle endringer..."
git add .

echo "📝 Commit-melding: $MESSAGE"
git commit -m "$MESSAGE"

echo "🚀 Pusher til GitHub..."
git push

echo "✅ Ferdig! Alt er oppdatert per $DATE"
